@model ShoppingCartVM

<div class="container">
    <div class="card shadow border-0">
        <div class="card-header bg-success bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-12 text-center">
                    <h5 class="pt-2 text-white">
                        Order Confirmed Successfully!
                    </h5>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-6">
                        <h4>Order Details:</h4>
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Order Number:</div>
                            <div class="col-8">@Model.OrderHeader.Id</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Order Date:</div>
                            <div class="col-8">@Model.OrderHeader.OrderDate.ToString("dd.MM.yyyy")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Total Amount:</div>
                            <div class="col-8">₺@Model.OrderHeader.OrderTotal</div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <h4>Shipping Details:</h4>
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Name:</div>
                            <div class="col-8">@Model.OrderHeader.Name</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Phone:</div>
                            <div class="col-8">@Model.OrderHeader.PhoneNumber</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Address:</div>
                            <div class="col-8">
                                @Model.OrderHeader.StreetAddress<br />
                                @Model.OrderHeader.City, @Model.OrderHeader.State @Model.OrderHeader.PostalCode
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-shopping-cart me-2"></i>Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        background-color: #8BC34A !important;
    }

    .fw-bold {
        color: #666;
    }

    .btn-primary {
        background-color: #1a3c40;
        border-color: #1a3c40;
        padding: 12px 25px;
        text-transform: uppercase;
        font-weight: bold;
    }

    .btn-primary:hover {
        background-color: #15323a;
        border-color: #15323a;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style> 