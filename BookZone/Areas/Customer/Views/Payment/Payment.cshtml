@model ShoppingCartVM

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .payment-buttons {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .payment-button {
        display: flex;
        align-items: center;
        padding: 20px;
        border: 2px solid #ddd;
        border-radius: 8px;
        background-color: white;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        color: #333;
    }

        .payment-button:hover {
            border-color: #1a3c40;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .payment-icon {
        font-size: 24px;
        margin-right: 15px;
        width: 40px;
        text-align: center;
        color: #1a3c40;
    }

    .payment-text {
        flex-grow: 1;
        font-size: 18px;
        font-weight: bold;
    }

    .arrow-icon {
        color: #666;
    }
</style>

<div class="container">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Payment Method
                    </h5>
                </div>
                <div class="col-6 text-end">
                    <a asp-action="Summary" class="btn btn-outline-danger btn-sm">Back to Order Summary</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12">
                            <div class="payment-buttons">
                                <button type="submit" name="paymentMethod" value="CreditCard" class="payment-button">
                                    <i class="fas fa-credit-card payment-icon"></i>
                                    <span class="payment-text">Credit Card</span>
                                    <i class="fas fa-chevron-right arrow-icon"></i>
                                </button>

                                <button type="submit" name="paymentMethod" value="PayPal" class="payment-button">
                                    <i class="fab fa-paypal payment-icon"></i>
                                    <span class="payment-text">PayPal</span>
                                    <i class="fas fa-chevron-right arrow-icon"></i>
                                </button>

                                <button type="submit" name="paymentMethod" value="BankTransfer" class="payment-button">
                                    <i class="fas fa-university payment-icon"></i>
                                    <span class="payment-text">Bank Transfer</span>
                                    <i class="fas fa-chevron-right arrow-icon"></i>
                                </button>
                            </div>

                            <div class="order-total mt-4">
                                <h4 class="text-end">Order Total: @Model.OrderHeader.OrderTotal.ToString("c")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div> 